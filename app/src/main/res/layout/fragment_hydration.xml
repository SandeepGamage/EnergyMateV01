<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- --- HYDRATION TRACKER --- -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hydration Tracker"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Settings icon -->
            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/round_space_with_border"
                android:src="@drawable/baseline_settings_24"
                android:contentDescription="Settings"
                app:tint="@color/orange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Reminders row -->
            <ImageView
                android:id="@+id/reminderIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/be"
                app:tint="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />

            <LinearLayout
                android:id="@+id/reminderGroup"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/reminderIcon"
                app:layout_constraintTop_toTopOf="@id/reminderIcon"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Reminders"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Every 120 minutes from 08:00 to 22:00"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"/>
            </LinearLayout>

            <Switch
                android:id="@+id/reminderSwitch"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/reminderIcon"
                app:layout_constraintBottom_toBottomOf="@id/reminderIcon"
                android:thumbTint="@color/hm_orange"
                android:trackTint="@color/orange" />

            <!-- Today's Water Intake Title -->
            <TextView
                android:id="@+id/waterIntakeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Water Intake"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@id/reminderIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Water Drop with % -->
            <ImageView
                android:id="@+id/waterDrop"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/baseline_water_drop_24"
                android:background="@drawable/round_space"
                android:contentDescription="Progress Drop"
                android:padding="6dp"
                app:tint="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/waterIntakeTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/waterPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/waterDrop"
                app:layout_constraintBottom_toBottomOf="@id/waterDrop"
                app:layout_constraintStart_toStartOf="@id/waterDrop"
                app:layout_constraintEnd_toEndOf="@id/waterDrop"
                android:gravity="center"/>

            <TextView
                android:id="@+id/waterTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 7 glasses"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="@id/waterDrop"
                app:layout_constraintStart_toEndOf="@id/waterDrop"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/glassesLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 more to go"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/waterTotal"
                app:layout_constraintStart_toEndOf="@id/waterDrop"
                android:layout_marginStart="12dp"/>

            <!-- Progress Bar -->
            <View
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:background="@color/light_gray"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/waterDrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Intake Controls -->
            <ImageButton
                android:id="@+id/minusBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/round_space_with_border"
                android:src="@drawable/baseline_minimize_24"
                android:contentDescription="Minus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                android:layout_marginTop="24dp"/>

            <Button
                android:id="@+id/addGlassBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/orange"
                android:text="Add Glass"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                app:layout_constraintStart_toEndOf="@id/minusBtn"
                app:layout_constraintEnd_toStartOf="@id/resetBtn"
                app:layout_constraintTop_toTopOf="@id/minusBtn"/>

            <ImageButton
                android:id="@+id/resetBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/round_space_with_border"
                android:src="@drawable/baseline_refresh_24"
                android:contentDescription="Reset"
                app:layout_constraintTop_toTopOf="@id/minusBtn"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Daily Goal -->
            <TextView
                android:id="@+id/dailyGoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Goal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/addGlassBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/dailyMinusBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/round_space_with_border"
                android:src="@drawable/baseline_minimize_24"
                android:contentDescription="Minus"
                app:layout_constraintTop_toBottomOf="@id/dailyGoalTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/dailyGlassGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 glasses"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/dailyMinusBtn"
                app:layout_constraintStart_toEndOf="@id/dailyMinusBtn"
                app:layout_constraintEnd_toStartOf="@id/dailyPlusBtn"
                app:layout_constraintBottom_toBottomOf="@id/dailyMinusBtn"/>

            <ImageButton
                android:id="@+id/dailyPlusBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/round_space_with_border"
                android:src="@drawable/baseline_add_24"
                android:contentDescription="Plus"
                app:layout_constraintTop_toTopOf="@id/dailyMinusBtn"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Glasses Icons -->
            <LinearLayout
                android:id="@+id/glassIconsLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/dailyMinusBtn">

                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray" android:layout_marginEnd="9dp"/>
                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray" android:layout_marginEnd="9dp"/>
                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray" android:layout_marginEnd="9dp"/>
                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray" android:layout_marginEnd="9dp"/>
                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray" android:layout_marginEnd="9dp"/>
                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray" android:layout_marginEnd="9dp"/>
                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/ic_drop" app:tint="@color/light_gray"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- --- HYDRATION TIPS --- -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydration Tips"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="42dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical">
            <!-- Tip 1 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="20dp">
                <ImageView android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/baseline_lightbulb_24" app:tint="@color/orange"/>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Your Day Right" android:textStyle="bold" android:textColor="@color/black" android:textSize="17sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Drink a glass of water as soon as you wake up to kickstart your metabolism." android:textColor="@color/gray" android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Tip 2 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="20dp">
                <ImageView android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/ic_heart_beat" app:tint="@color/orange"/>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="During Exercise" android:textStyle="bold" android:textColor="@color/black" android:textSize="17sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Drink water before, during, and after physical activity to stay hydrated." android:textColor="@color/gray" android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Tip 3 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="20dp">
                <ImageView android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/ic_fork_knife" app:tint="@color/orange"/>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="With Meals" android:textStyle="bold" android:textColor="@color/black" android:textSize="17sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sip water throughout your meal to aid digestion and feel more satisfied." android:textColor="@color/gray" android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Tip 4 -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <ImageView android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/ic_bed" app:tint="@color/orange"/>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Before Bed" android:textStyle="bold" android:textColor="@color/black" android:textSize="17sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Have a small glass of water before sleep, but not too much to avoid interruptions." android:textColor="@color/gray" android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- --- BENEFITS --- -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benefits of Staying Hydrated"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="38dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="18dp">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_heart" app:tint="@color/green"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Better Heart Health" android:textColor="@color/black" android:textSize="16sp" android:gravity="center"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_lightning" app:tint="@color/orange"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More Energy" android:textColor="@color/black" android:textSize="16sp" android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_smile" app:tint="@color/orange"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clearer Skin" android:textColor="@color/black" android:textSize="16sp" android:gravity="center"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_chart" app:tint="@color/orange"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Better Focus" android:textColor="@color/black" android:textSize="16sp" android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
